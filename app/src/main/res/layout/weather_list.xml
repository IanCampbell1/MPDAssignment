<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp">

        <ImageView
            android:id="@+id/conditionImageView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:id="@+id/dayTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/conditionImageView"
            android:text="Line 1"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lowTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dayTextView"
            android:layout_marginStart="11dp"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@+id/conditionImageView"
            android:text="Line2"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/highTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lowTextView"
            android:layout_marginStart="13dp"
            android:layout_toEndOf="@+id/conditionImageView"
            android:text="Line3"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/humidityTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lowTextView"
            android:layout_marginStart="13dp"
            android:layout_toEndOf="@+id/highTextView"
            android:text="Line4"
            android:textSize="12sp"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>